{# template for .env file #}
ENVIRONMENT={{ env_name }}
DJANGO_SETTINGS_MODULE={{ project_name }}.settings.deploy
SECRET_KEY={{ secret_key }}
DB_NAME={{ db_name }}
DB_HOST={{ db_host }}
DB_PORT={{ db_port }}
DB_USER={{ db_user }}
DB_PASSWORD={{ db_password }}
DOMAIN={{ domain }}
{% if cache_host is defined %}CACHE_HOST={{ cache_host }}{% endif %}
{% if broker_host is defined %}BROKER_HOST={{ broker_host }}{% endif %}
{% if broker_password is defined %}BROKER_PASSWORD={{ broker_password }}{% endif %}
STATIC_DIR={{ static_dir }}
LOG_DIR={{ log_dir }}
